  "description": "globby with sort id/chinese/fullwidth number for node-novel",
  "keywords": [
    "alphanum",
    "alphanumeric",
    "chinese",
    "cmp",
    "compare",
    "comparison",
    "fullwidth",
    "glob",
    "globby",
    "jp",
    "natcmp",
    "natsort",
    "natural",
    "node-novel",
    "novel",
    "number",
    "order",
    "path",
    "sort",
    "string",
    "strnatcmp",
    "txt",
    "zh"
  ],
  "homepage": "https://github.com/bluelovers/node-novel-globby#readme",
  "bugs": {
    "url": "https://github.com/bluelovers/node-novel-globby/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bluelovers/node-novel-globby.git"
  },
  "license": "ISC",
  "author": "bluelovers",
  "main": "index.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "coverage": "npx nyc yarn run test",
    "lint": "npx eslint **/*.ts",
    "ncu": "npx yarn-tool ncu -u",
    "npm:publish": "npm publish",
    "postpublish_": "git commit -m \"chore(release): publish\" .",
    "prepublish:lockfile": "npx sync-lockfile .",
    "prepublishOnly": "yarn run ncu && yarn run sort-package-json && yarn run test",
    "prepublishOnly_": "yarn run ncu && yarn run sort-package-json && yarn run test",
    "postpublish": "git commit -m \"chore(release): publish\" .",
    "sort-package-json": "npx yarn-tool sort",
    "test": "npx mocha \"!(node_modules)/**/*.{test,spec}.{js,jsx}\"",
    "test:mocha": "npx mocha --require ts-node/register \"!(node_modules)/**/*.{test,spec}.{ts,tsx}\"",
    "tsc:default": "tsc -p tsconfig.json",
    "tsc:esm": "tsc -p tsconfig.esm.json"
  },
  "dependencies": {
    "@node-novel/normalize": "^1.0.10",
    "@node-novel/sort": "^1.0.7",
    "@types/bluebird": "*",
    "@types/globby": "*",
    "bluebird": "^3.5.5",
    "glob-tree-list": "^1.0.5",
    "globby": "^10.0.1",
    "upath2": "^2.1.3"
  },
  "devDependencies": {
    "@bluelovers/tsconfig": "^1.0.12",
    "@types/fs-extra": "^8.0.0",
    "cjk-conv": "^1.1.85",
    "fs-iconv": "^2.0.10"
  }
}
